<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="session__header">
      <h2>Registrierung</h2>
    </div>
    <div class="session__form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :name, "Name:" %>
          <%= f.text_field :name, class: "form-control", autofocus: true %>
        </div>

        <div class="form-group">
          <%= f.label :email, "E-Mail:" %>
          <%= f.email_field :email, class: "form-control", autocomplete: "email" %>
        </div>

        <div class="form-group">
          <%= f.label :username, "Benutzername:" %>
          <%= f.text_field :username, class: "form-control", autocomplete: "username" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "Passwort:" %>
          <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Passwort wiederholen:" %>
          <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
        </div>

        <div class="form-group">
          <%= f.submit "Konto erstellen", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
