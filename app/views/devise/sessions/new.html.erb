<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="session__header">
      <h2>Login</h2>
    </div>
    <div class="session__form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group">
          <%= f.label :login, "E-Mail / Benutzername:" %>
          <%= f.text_field :login, class: 'form-control', autofocus: true, autocomplete: "email" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "Passwort:" %>
          <%= f.password_field :password, class: 'form-control',  autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, 'angemeldet bleiben' %>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.submit "Login", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
